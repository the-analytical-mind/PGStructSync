<UserControl x:Class="StructSync.UserControl.TargetMachineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StructSync.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="#000" Grid.Row="0" Margin="5 2 5 2" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <Label  VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Content="Server :"></Label>
                <TextBox x:Name="servername" FontSize="16" Width="200" VerticalAlignment="Center" Text="localhost" Margin="0 0 0 0" ></TextBox>
                <Label  VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Content="Port :"></Label>
                <TextBox x:Name="portnumber" FontSize="16" Width="200" Text="5432" VerticalAlignment="Center" Margin="0 0 0 0" ></TextBox>
                <Label Content="Username :" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"></Label>
                <TextBox x:Name="username" FontSize="16" Width="200" Text="postgres" VerticalAlignment="Center" Margin="0 0 0 0" ></TextBox>
                <Label Content="Password :" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"></Label>
                <PasswordBox x:Name="password" FontSize="16" Width="200" VerticalAlignment="Center" Margin="0 0 5 0"></PasswordBox>

                <Button Content="Connect" Width="100" x:Name="btnconecttarget" Click="btnconecttarget_Click" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Cursor="Hand"></Button>


                <Label  VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Content="Status :"></Label>
                <Label  VerticalAlignment="Center" FontSize="16" x:Name="targetdblinkstatus" ></Label>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions >
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#000" Grid.Row="0" Margin="5 2 5 2" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <Label  VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Content="File :"></Label>
                   
                    <TextBox x:Name="snapshotfilepath" FontSize="16" Width="500" IsReadOnly="True"  VerticalAlignment="Center" Margin="0 0 0 0" ></TextBox>
                    <Button Content="Browse" Name="selectsnapshotfile" Click="selectsnapshotfile_Click" VerticalAlignment="Center" FontSize="16" Margin="0 0 10 0" Cursor="Hand" ></Button>


                    <Label  VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Content="DataBase :"></Label>
                    <ComboBox x:Name="cmb_database" FontSize="16" IsEnabled="False" Width="200" VerticalAlignment="Center" Margin="0 0 10 0" ></ComboBox>
                    <Button Content="Procces" Name="processsnapshot" Click="processsnapshot_Click" VerticalAlignment="Center" FontSize="16" Margin="0 0 10 0" Cursor="Hand" ></Button>

                </StackPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="grd_displayresult" Grid.Column="0">

                </Grid>
                <Border BorderBrush="#000" Grid.Column="1" Margin="5 2 5 2" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions >
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Button Content="Execute Query" Name="executequerybutton" IsEnabled="False" Click="executequerybutton_Click" VerticalAlignment="Center" FontSize="16" Margin="5 0 10 0" Cursor="Hand" ></Button>
                        </StackPanel>
                        <Grid x:Name="grd_queryresult" Grid.Row="1">
                            <TextBox x:Name="txt_querytool" FontSize="16" TextWrapping="Wrap"></TextBox>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
